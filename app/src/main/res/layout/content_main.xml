            android:textAlignment="center"
            android:textColor="@color/secondTitleColor"
            android:textSize="@dimen/second_title" />

        <TextView
            android:id="@+id/firsPara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
