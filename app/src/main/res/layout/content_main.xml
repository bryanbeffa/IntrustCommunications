<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="56dp"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="622dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/outsourceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Outsource Contact Centre"
            android:textAlignment="center"
            android:textColor="@color/firstTitleColor"
            android:textSize="@dimen/first_title" />

        <TextView
            android:id="@+id/secondTitle"
            android:layout_width="331dp"
            android:layout_height="79dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Let us Help you get closer to your customers"
            android:textAlignment="center"
            android:textColor="@color/secondTitleColor"
            android:textSize="@dimen/second_title" />

        <TextView
            android:id="@+id/firsPara"
            android:layout_width="333dp"
            android:layout_height="196dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="It is in the interest of all business owners to maintain a strong relationship
            with their customers. For many this is a challenge due to time and budget.
            At Intrust Communication we become an extension of your company."
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/firsPara4"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="It is in the interest of all business owners to maintain a strong relationship
            with their customers. For many this is a challenge due to time and budget.
            At Intrust Communication we become an extension of your company."
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/firsPara5"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="It is in the interest of all business owners to maintain a strong relationship
            with their customers. For many this is a challenge due to time and budget.
            At Intrust Communication we become an extension of your company."
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normal_text" />

    </LinearLayout>

</ScrollView>