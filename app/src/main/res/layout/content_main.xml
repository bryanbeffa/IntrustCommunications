<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="654dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="77dp"
            android:layout_height="31dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/outsourceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Outsource Contact Centre"
            android:textAlignment="center"
            android:textColor="@color/firstTitleColor"
            android:textSize="@dimen/first_title" />

        <TextView
            android:id="@+id/secondTitle"
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Let us Help you get closer to your customers"
            android:textAlignment="center"
            android:textColor="@color/secondTitleColor"
            android:textSize="@dimen/second_title" />

        <TextView
            android:id="@+id/firsPara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="It is in the interest of all business owners to maintain a strong relationship
            with their customers. For many this is a challenge due to time and budget.
            At Intrust Communication we become an extension of your company."
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/secondPara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="We provide the telesales support that is vital to your business growth and development. \nThe areas that we specialise in are:"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/thirdPara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:lineHeight="28dp"
            android:textAlignment="center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="@string/works_list"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/servicesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:text="Our Services"
            android:textAlignment="center"
            android:textColor="@color/firstTitleColor"
            android:textSize="@dimen/first_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/firsPara8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:text="It is in the interest of all business owners to maintain a strong relationship
            with their customers. For many this is a challenge due to time and budget.
            At Intrust Communication we become an extension of your company."
                android:textColor="@color/normalTextColor"
                android:textSize="@dimen/normal_text" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>