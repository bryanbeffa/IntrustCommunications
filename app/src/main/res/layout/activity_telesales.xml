<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:baselineAligned="false"
        android:orientation="vertical">

        <!-- First part -->
        <TextView
            android:id="@+id/telesalesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inbound And Outbound Telesales"
            android:textAlignment="center"
            android:textSize="@dimen/first_title" />

        <TextView
            android:id="@+id/secondTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/secondTitleColor"
            android:textSize="@dimen/second_title"
            android:text="Are you having challenges missing Phone calls and vital Customer Contact?" />

        <TextView
            android:id="@+id/firstPara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/normalTextColor"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="@dimen/normal_text"
            android:text="All Business’s need to keep in constant touch with it’s customers and maintain that vital relationship." />

        <TextView
            android:id="@+id/secondPara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/normalTextColor"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:textSize="@dimen/normal_text"
            android:text="Managing an Inbound Team is a time consuming and expensive exercise." />

        <TextView
            android:id="@+id/thirdPara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normal_text"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:text="Intrust Communications specialize in receiving calls on behalf of our clients and ensuring that vital customer contact is maintained and any opportunities are turned into sales, thus helping to grow your business.  Every contact is a potential sales opportunity." />

        <TextView
            android:id="@+id/fourthPara"
            android:layout_width="match_parent"
            android:textColor="@color/normalTextColor"
            android:textSize="@dimen/normal_text"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:text="We will work with you to set and agree a plan of action that will ensure your customer contact is maintained and your sales pipeline increased.  An agreed criteria to ensure the phone is answered when you want and how you want will be agreed upfront. All of this can be done in a cost effective way." />

        <!-- End First part -->
    </LinearLayout>
</ScrollView>